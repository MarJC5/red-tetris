{
  "private": true,
  "name": "red-tetris",
  "version": "1.0.0",
  "description": "Multiplayer Tetris game",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "nodemon --exec ts-node main.ts",
    "build": "tsc",
    "watch": "tsc -w",
    "install-all": "cd .. && yarn install && cd client && yarn install",
    "deploy": "yarn build && yarn start"
  },
  "dependencies": {
    "express": "^4.21.2",
    "socket.io": "^4.8.0"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.1.7",
    "@types/node": "^20.8.4",
    "@types/express": "^4.17.17",
    "@types/socket.io": "^3.0.1"
  }
}
